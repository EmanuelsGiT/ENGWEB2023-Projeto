doctype html
html
  head
    title Post
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='stylesheet' href='/stylesheets/w3-black.css')
    link(rel='stylesheet' href='/stylesheets/w3.css')
    link(rel='stylesheet' href='/stylesheets/home.css')
  body
    .w3-main
      .w3-top.w3-display-topmiddle
        .w3-bar.w3-theme.w3-left-align.w3-large.w3-padding-16
          a.w3-bar-item.w3-button.w3-amber.w3-margin-left(href='/home') Inquirições de Génere
          a.w3-bar-item.w3-button(href='/home/perfil') Perfil
          a.w3-bar-item.w3-button(href='/home') Posts
          a.w3-bar-item.w3-button(href='/home/inquiricoes') Inquirições
          a.w3-bar-item.w3-button.w3-right(href='/home/logout') Log out
          form.w3-center(action='/home/post' style='margin-top: 2px')
            select.w3-select.w3-bar-item.w3-theme.w3-margin-right(name='searchType')
              option(value='nome') Nome
              option(value='data') Data
            input.w3-input.w3-bar-item.w3-round-xlarge(name='search', type='text', placeholder='Search')
            button.w3-bar-item.w3-theme.w3-button(type="submit") Search
      h5.w3-padding-top-64(style="font-size: 5vmax;") Perfil
      .w3-content
          .w3-row
            .w3-card.w3-round-xlarge.post-box.w3-hover-shadow.w3-panel.w3-padding-16
                form.w3-padding-bottom-64
                    p Nome: 
                    input.w3-input.w3-bar-item.w3-round-xlarge(name='search', type='text', placeholder='nome')
                    p Email: 
                    input.w3-input.w3-bar-item.w3-round-xlarge(name='search', type='text', placeholder='email')
                    p Password: 
                    input.w3-input.w3-bar-item.w3-round-xlarge(name='search', type='text', placeholder='password')
                    p Nova password: 
                    input.w3-input.w3-bar-item.w3-round-xlarge(name='search', type='text', placeholder='password')
                    p Filiação: 
                    input.w3-input.w3-bar-item.w3-round-xlarge(name='search', type='text', placeholder='filiação')
                    p Nível: 
                    input.w3-input.w3-bar-item.w3-round-xlarge(name='search', type='text', placeholder='nível')
                    p Data de Registo: 
                    input.w3-input.w3-bar-item.w3-round-xlarge(name='search', type='text', placeholder='dataRegisto')
                    p Data do Último Acesso: 
                    input.w3-input.w3-bar-item.w3-round-xlarge(name='search', type='text', placeholder='dataUltimoAcesso')
                    button.w3-bar-item.w3-green.w3-button.w3-right(type="submit") Search
      .w3-display-bottom
        footer.w3-center
          .w3-container.w3-theme-l1
            p
              | Powered by 
              a(href='https://www.w3schools.com/w3css/default.asp' target='_blank') w3.css
