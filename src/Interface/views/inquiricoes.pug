doctype html
html
  head
    title Gestão de Listas de Compras
    meta(charset="utf-8")
    link(rel='stylesheet', href='/stylesheets/w3.css')
    style.
      .pagination {
        display: flex;
        justify-content: center;
        margin-top: 20px;
      }
      .pagination a {
        color: black;
        float: left;
        padding: 8px 16px;
        text-decoration: none;
        transition: background-color 0.3s;
      }
      .pagination a.active {
        background-color: #4CAF50;
        color: white;
      }
      .pagination a:hover:not(.active) {
        background-color: #ddd;
      }
  body
    .w3-card-4
      header.w3-container.w3-teal
        h1 Gestão de Listas de Compras
      .w3-container
        table.w3-table-all
          tr
            th ID
            th Username
            th Scope Content
            th Operações
          each i in posts
            tr
              td= i._id
              td= i.Username
              td= i.ScopeContent
              //td= l.produtos.length
              td
                button.w3-btn.w3-round.w3-indigo.w3-margin-right 
                  a(href="#") C
                button.w3-btn.w3-round.w3-indigo.w3-margin-right  
                  //a(href="/retrieveList/" + l._id) R
                  a(href="#") R
                button.w3-btn.w3-round.w3-indigo.w3-margin-right  
                  a(href="#") U 
                button.w3-btn.w3-round.w3-indigo.w3-margin-right  
                  a(href="#") D
      .w3-bottom
        .pagination
          a(href=`?page=${prevIndex}`, class=(prevIndex ? '' : 'disabled')) Previous
          a(href=`?page=${nextIndex}`, class=(nextIndex ? '' : 'disabled')) Next                
      footer.w3-container.w3-teal
        h5 Generated by shopList::EngWeb2023 in #{d}
